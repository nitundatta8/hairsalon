 @{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Stylist Details</h2> 
<hr />
<h3>Stylist Name:  @Html.DisplayFor(model => model.StylistName)<h3>
<h3>Contact Number:  @Html.DisplayFor(model => model.StylistPhoneNum)<h3>
<h3>Experince:  @Html.DisplayFor(model => model.Experince) years<h3>

