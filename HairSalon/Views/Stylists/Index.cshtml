@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylist</h1>
@if (@Model.Count == 0)
{
  <h3>No Stylist have been added yet!</h3>
}

@foreach(Stylist stylist in Model)
{
  <li>Stylist Name: @Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
}

<p>@Html.ActionLink("Add New Stylist", "Create")</p>
