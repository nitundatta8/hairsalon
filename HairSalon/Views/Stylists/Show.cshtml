@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h5>Stylist</h5>
@if (@Model.Count == 0)
{
  <h3>No Stylist have been added yet!</h3>
}

@foreach(Stylist stylist in Model)
{
  <p>Stylist Name: @Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</p>
}

