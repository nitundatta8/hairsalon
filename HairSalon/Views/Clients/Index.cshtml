@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Client List</h1>
@if (@Model.Count == 0)
{
  <h3>No client have been added yet!</h3>
}
@if(ViewBag.data.Count>0){
<h3>No Stylist have been added yet!</h3>
<p>@Html.ActionLink("Add New Client", "Create")</p>
}

@foreach(Client client in Model)
{
  
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) | Stylist name:  @client.Stylist.StylistName</li>
}

