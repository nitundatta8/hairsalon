@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Appointment>;

<h4>Appointment</h4>

@if (@Model.Count == 0)
{
  <h3>No appointment have been added yet!</h3>
}

@foreach(Appointment appointment in Model)
{
  <li>@Html.Label("Thank you for choosing us")| @Html.ActionLink($"{appointment.Client.ClientName}", "Details",new { id = appointment.AppointmentId })</li>
}



